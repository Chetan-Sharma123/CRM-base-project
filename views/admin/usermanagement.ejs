<%-include('../../particals/admin/head.ejs')%>
<body>
<section id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h5>welcome <%=username%></h5> 
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-6">
                <a href="/logout/"><button class="btn btn-danger">LOG OUT</button></a>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <%-include('../../particals/admin/left.ejs')%>
            <div class="col-md-9">
                <h2>USER MANAGEMENT</h2>
                <%if(message!=='mess'){%>
                    <h6><%=message%></h6>
                <%}%>
               
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>S.NO.</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>status</th>
                            <th>Gender</th>
                            <th>Date</th>
                            <th>Delete</th>
                        </tr>
                        
                        <%userData.forEach((val,key)=>{%>

                            <tr>
                                <td><%=key+1%></td>
                                <td><%=val.firstname%></td>
                                <td><%=val.lastname%></td>
                                <td><%=val.email%></td>
                                <td><%=val.role%></td>
                                <td><a href="/admin/updatestatus/<%=val.id%>/<%=val.status%>"><button class="btn btn-dark"><%=val.status%></button></a></td>
                                <td><%=val.gender%></td>
                                <td><%=val.createdate%></td>
                                <td><a href="/admin/delete/<%=val.id%>" onclick="return confirm('Are you sure you want to delete this item?')";><button class=" btn btn-danger"  >Delete</button></a></td>
                            </tr>
                            <%})%>
                        
                    </thead>
                </table>
            </div>
        </div>
    </div>
</section>